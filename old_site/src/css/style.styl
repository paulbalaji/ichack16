    margin-top -50px
    z-index 1

.fade-hover
  display inline-block;
  vertical-align middle;
  backface-visibility hidden;
  position relative;
  overflow hidden;

  &:before
    content ""
    position absolute
    left 0
    right 0
    bottom 0
    background #000
    height: 100%
    opacity 0
    transition-property opacity
    transition-duration 0.2s
    transition-timing-function ease-out

  &:hover:before, &:focus:before, &:active:before
    opacity 0.3

